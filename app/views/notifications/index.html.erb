<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
　　<h2>お知らせ</h2>
　　<ul>
  　　<% @notifications.each do |notification| %>
  　　<hr>
    　　<li>
           <% if notification.read == false %>
            <span><font color="red">未読</font></span>
           <% end %>
      　　<p>
      　 　  <%= notification.comment.user.try(:name) %>さんが、あなたのブログ（<%= link_to "#{notification.comment.blog.title}", blog_path(notification.comment.blog, notification_id: notification.id) %>）にコメントしました。
      　　</p>
      　　<p class="right"><%= notification.created_at %></p>
    　　</li>
  　　<% end %>
　　</ul>
　</div>
</div>
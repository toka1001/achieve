<div class="container">
 <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

  <h3>以下の内容で、送信する。</h3>

  <%= form_for(@contact) do |f| %>
    <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :content %>

    <!-- @contact.name,@contact.email,@contact.contentとすることで、表示用の値を画面に出力しています。 -->
    <p>お名前:<%= @contact.name %></p>
    <p>メールアドレス:<%= @contact.email %></p>
    <p>お問い合わせ内容:<%= @contact.content %></p>
    <%= f.submit "送信する", class: 'btn btn-primary btn-block' %>
  <% end %>

    <!-- 通常の戻るボタンはパラメータを渡せないため、form_forで定義。 -->
  <%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :content %>
    <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
  <% end %>
 </div>
</div>